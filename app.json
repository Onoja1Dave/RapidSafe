{
  "expo": {
    "name": "RapidSafe",
    "slug": "RapidSafe",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app/assets/images/RapidSafe.jpg",
    "scheme": "rapidsafe",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "location": {
      "permissions": ["LOCATION"],
      "allowBackgroundUpdates": true,
      "isIosBackgroundLocationEnabled": true
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rapidsafe.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Your app uses your location to send emergency alerts to your contacts.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Your app uses your location to send emergency alerts to your contacts, even when the app is in the background."
      }
    },

    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/RapidSafe.jpg",
        "backgroundImage": "./assets/images/RapidSafe.jpg",
        "monochromeImage": "./assets/images/RapidSafe.jpg"
      },
      "package": "com.rapidsafe.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "RECEIVE_BOOT_COMPLETED"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/RapidSafe.jpg"
    },

    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Your emergency app needs constant background location access to send your location to emergency contacts when a Duress Alert is triggered."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/RapidSafe.jpg",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {
        "exclude": ["context", "config", "services", "utils"]
      }
    }
  }
}
